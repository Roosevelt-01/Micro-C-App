<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="micro_c_app.Views.SearchView">
  <ContentView.Content>
      <StackLayout>
            <Button x:Name="ScanButton"
                    Margin="0,0,0,10"
                    Text="Scan"
                    BackgroundColor="{StaticResource Primary}"
                    Clicked="OnScanClicked"
                    TextColor="White"/>
            <Grid>
                <Entry x:Name="SearchField"
                       Keyboard="Numeric"
                       Placeholder="Enter a SKU/UPC"
                       TextColor="Black"
                       PlaceholderColor="DarkGray"
                       HorizontalOptions="FillAndExpand"/>
                
                <ActivityIndicator x:Name="BusyIndicator"  IsRunning="False" Scale="0.7"/>
            </Grid>
            <Button x:Name="SubmitButton" Margin="0,10,0,0" Text="Search" Grid.Row="0" Grid.Column="0"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>