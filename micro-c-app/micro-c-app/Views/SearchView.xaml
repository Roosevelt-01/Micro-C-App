<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="micro_c_app.Views.SearchView">
  <ContentView.Content>
      <StackLayout>
            <Button Margin="0,0,0,30" Text="Scan"
                        BackgroundColor="{StaticResource Primary}"
                        Clicked="OnScanClicked"
                        TextColor="White" />
            <Entry x:Name="SearchField" Keyboard="Numeric" Placeholder="Enter a SKU/UPC"  TextColor="Black" PlaceholderColor="DarkGray"/>
            <Button Margin="0,10,0,0" Text="Search"
                        BackgroundColor="{StaticResource Primary}"
                        Clicked="OnSearchClicked"
                        TextColor="White" />
        </StackLayout>
  </ContentView.Content>
</ContentView>