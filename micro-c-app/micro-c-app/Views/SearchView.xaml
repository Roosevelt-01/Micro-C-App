<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:micro_c_app.Views"
             x:Class="micro_c_app.Views.SearchView">
  <ContentView.Content>
        <StackLayout x:Name="FlipStack" Orientation="Vertical">
            <Button x:Name="ScanButton"
                    Margin="0,0,0,10"
                    Text="Scan"
                    Clicked="OnScanClicked"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="75"
                    VerticalOptions="Center"/>
            <Grid HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" Grid.Row="0">
                    <Entry x:Name="SKUField"
                       Placeholder="Enter a SKU/UPC"
                       HorizontalOptions="FillAndExpand"
                        Keyboard="Numeric"/>
                    <Button x:Name="SKUSubmitButton" Margin="0,10,0,0" Text="Search" Grid.Row="0" Grid.Column="0"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Grid.Row="1">
                    <Entry x:Name="SearchField"
                       Placeholder="Search"
                       HorizontalOptions="FillAndExpand"/>
                    <Button x:Name="SearchSubmitButton" Margin="0,10,0,0" Text="Search" Grid.Row="0" Grid.Column="0"/>
                </StackLayout>
                <ActivityIndicator x:Name="BusyIndicator"  IsRunning="False" Scale="0.7"/>
            </Grid>
        </StackLayout>
  </ContentView.Content>
</ContentView>